@import 'nib'

// Site-wide styling
body, input, textarea, button
  -webkit-font-smoothing antialiased

body
  font-family: 'PT Sans'
  font-weight: 200

h1, h2, h3, h4, h5, h6
  font-family "PT Sans"


// Navigation bar
.site-navigation.navbar
  background none !important
  border none
  padding 0
  margin 0

  ul.nav.navbar-nav
    li a
      transition color 0.3s ease
      border 2px solid rgba(0,0,0,0)
      padding 5px
      margin 10px
      font-family "PT Sans Narrow"
      font-weight 600
      font-size 22px

    li a:not(:hover)
      color black !important

    li.selected a
      background none !important
      border-color black

