@import 'nib'

.landing
  transition: background-image 0.3s ease

  background-image  url("/images/slideshow/landing-bg-5.png")
  background-size   cover
  background-color  black
  background-position center center

  color white
  overflow hidden

  .fade-overlay
    background url("/images/dotted-pattern.png"), rgba(0,0,0,0.3)
    height 100%

    .fake-offset
      height 0px

    .centered-container
      height 100%
      margin 0
      position relative

      .centered
        width 100%
        position absolute

        left 50%
        top  50%
        transform: translate(-50%, -50%)

  .big-header
    font-family "PT Sans Narrow"
    font-size 64px
    font-weight bold

  .big-header-subtitle
    font-size 20px
    font-weight 100
    font-family 'PT Sans'
    margin-top 50px
    margin-bottom 50px

  .wow-button
    border 1px solid white
    color white
    letter-spacing 1px

    transition background-color 0.3s ease, color 0.3s ease

    &:hover
      background-color white
      color black

