@import 'nib'

.shot-grid-item
  padding 5px
  overflow hidden


  .polaroid
    position relative
    overflow hidden
    background-color #fff
    margin 0
    padding 0
    border-radius 3px
    box-shadow 0px 1px 2px 0px rgba(0,0,0,0.1)

  .polaroid-photo
    width 100%

  .photo-user
    .media
      margin-top 1px
    padding 10px 10px
    white-space nowrap
    a
      color  #555555
    small
      color  #888888

